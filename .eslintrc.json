{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-console": "off",
    "no-debugger": "error",
    "prefer-const": "error",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "react-hooks/exhaustive-deps": "warn",
    "import/no-anonymous-default-export": "off"
  },
  "ignorePatterns": [
    "generated/**",
    ".next/**",
    "out/**",
    "node_modules/**",
    "*.config.js"
  ]
}
